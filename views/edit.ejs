<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/styles.css">
  <title>Document</title>
  <% include ./partials/head %>
</head>
<body>
  <header>
    <% include ./partials/header %>
  </header>
  <h3 class="title">Edit Item</h3>
  <form class="edit-form" action="/item/edit/id" method="post">
    <input type="text" name="item" value="" placeholder="Old Item To Replace">
    <input type="text" name="newItem" value="" placeholder="New Item">
    <input class="submit" type="submit">
    <div class="card-body">
      <ul class="list-group">
        <% groceryListItems.forEach(function(item) { %>
          <% let x = item[0]
            %>
            <div class="card">
            <img class="list-img" src="<%= x %>" />
          <li class="list-group-item"><%= item[1] %></li>
        </div>
        <% }); %>
      </ul>
    </div>
  </div>
  <footer class="bottomFooter">
    <% include ./partials/footer %>
  </footer>
</body>
</html>
