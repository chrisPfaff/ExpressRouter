<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/styles.css">
  <title>Document</title>
  <% include ./partials/head %>
</head>
<body>
  <header>
    <% include ./partials/header %>
  </header>
  <div class="card">
  <h3 class="card-title">Edit Item</h3>
    <div class="card-body">
      <form action="/item/edit/id" method="post">
        <input type="text" name="item" value="" placeholder="Old Item To Replace">
        <input type="text" name="newItem" value="" placeholder="New Item">
        <input type="submit">
      <ul class="list-group">
        <% groceryListItems.forEach(function(item) { %>
          <li class="list-group-item"><%= item[0] %></li>
        <% }); %>
      </ul>
    </div>
  </div>
  <footer class="bottomFooter">
    <% include ./partials/footer %>
  </footer>
</body>
</html>
